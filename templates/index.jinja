<!DOCTYPE html>
<head>
	<style>
		html, body {
			margin: 0;
			padding: 0;
			font-family: "Futura PT", "Futura", Helvetica, "Sans serif";
		}

		.coalitions_holder {
			display: flex;
			height: 100vh;
		}

		.coalition
		{
			flex: 1;
			background-size: cover;
			background-position: center;
			position: relative;
			z-index: -1;
		}


		.progress_bar
		{
			position: absolute; /* Position relative to the .coalition div */
			bottom: 0; /* Start from the bottom */
			left: 15%;
			width: 70%; /* Take the full width of the .coalition div */
			border: 2px solid;
			border-bottom: 0px;
			border-top-right-radius: 50px;
			border-top-left-radius: 50px;
			z-index: 0;
		}

		@keyframes height-anim {
			to {height: 80%;} /*Range is 75-85*/
		}

		@property --num {
			syntax: "<integer>";
			initial-value: 0;
			inherits: false;
		}

		@keyframes counter {
			from { --num: 0;}
			to {--num: 23094;}
		}


		.progress_bar_torrent
		{
			background: linear-gradient(to top, rgb(10, 57, 129, .95), rgb(23, 103, 222,.8));
			border-color: rgb(10, 0, 155);
			height: 30%;
			content: 0;
			animation: height-anim 5s forwards ease-out;
		}

		.progress_bar_legion
		{
			background: linear-gradient(to top, rgba(94, 4, 4, .95), rgba(204, 0, 0, .8));
			border-color: rgb(74, 0, 0);
			height: 65.9631059631%;
		}

		.progress_bar_armada
		{
			background: linear-gradient(to top, rgba(6, 71, 4, 0.95), rgb(11, 120, 7, .8));
			border-color: rgb(0, 44, 14);
			height: 65.2271318938%;
		}

		.crown
		{
			aspect-ratio: 1 / 1;
			display: block;
			position:	absolute;
			margin: auto;
			left: 0;
			right: 0;
			text-align: center;
			z-index: 1;
			margin-bottom: 0px;
			width: 30%;
			transform: translateX(0%) translateY(-135%);
		}

		.score
		{
			color: rgba(255,255,255,.9);
			font-weight: bolder;
			position: absolute;
			top: -20px;
			left: 50%;
			transform: translateX(-50%) translateY(-100%);
			color: white;
			font-weight: 1000;
			text-transform: uppercase;
			text-align: center;
			font-size: 2vw;
			counter-reset: num var(--num);
			animation: counter 5s forwards ease-in-out;
		}

		.score::after
		{
			content: counter(num);
		}

		.coalition-flag--icon
		{
			margin-left: 30%;
			margin-right: 30%;
			fill-opacity: 30%;
			position: absolute;
			bottom:	80px;
			z-index: -1;
		}

		.coalition-name
		{
			color: rgba(255,255,255,.9);
			font-weight: bolder;
			position: absolute;
			bottom: 80px;
			left: 50%;
			transform: translateX(-50%) translateY(100%);
			font-weight: 1000;
			text-transform: uppercase;
			text-align: center;
			font-size: 1.5vw;
		}

		.avatar_container
		{
			color: rgba(255,255,255,.9);
			font-weight: bold;
			font-weight: 1000;
			text-align: center;
			font-size: 1.5vw;
			z-index: 1;
			display: flex;
			margin-top: 5%;
		}

		.avatar_label_scorers
		{
			margin-top: 5%;
			font-weight: 1000;
			z-index: 2;
			color: white;
			font-size: 2vw;
			text-align: center;
		}

		.avatar
		{
			display: block;
			margin-left: 10%;
			margin-right: auto;
			margin-top:	8%;
			width: 30%;
			border-radius: 50%;
			border: 2px solid rgb(10, 0, 155);
			aspect-ratio: 1 / 1;
			z-index: 2;
		}

		.name_score
		{
			width: 100%;
			display: block;
		}

		.name_score_total
		{
			margin-top: 20%;
		}

		.position {
			margin-top: auto;
			margin-bottom: auto;
			text-align: center;
			margin-left: 5%;
			font-size: 2vw;
		}

		.torrent_bg
		{
			background-image: url("https://cdn.intra.42.fr/coalition/cover/242/42Q_035_22_BG_Coalitions_Torrent_3000x2000.jpg");
		}

		.legion_bg
